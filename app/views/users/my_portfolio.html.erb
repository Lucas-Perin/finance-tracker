<h1>Meu Portfolio</h1>

<div class="search-area">
    <h3>Procure Estoques</h3>
    <%= form_tag '#', method: :get do %>
        <div class="form-group row">
            <div class="col-sm-9">
                <%= text_field_tag :stock, params[:stock], placeholder: "Simbolo do ticket do estoque", autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <div class="col-sm-3">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= 'Search' %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>
